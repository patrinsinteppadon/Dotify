<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:s="http://schemas.android.com/tools"
    android:padding="@dimen/padding_medium"
    android:background="@color/colorAccent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageButton
        android:id="@+id/ivShuffle"
        android:src="@drawable/ic_shuffle"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvCurrentSong"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Dotify!"
        app:layout_constraintLeft_toRightOf="@+id/ivShuffle"
        app:layout_constraintTop_toTopOf="@+id/ivShuffle"
        app:layout_constraintBottom_toBottomOf="@+id/ivShuffle"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_marginLeft="@dimen/padding_medium" />

</androidx.constraintlayout.widget.ConstraintLayout>